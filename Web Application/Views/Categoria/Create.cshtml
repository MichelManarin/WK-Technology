@model Web_Application.Models.CategoriaViewModel

@{
    ViewData["Title"] = "P&C WK";
}

<div class="header-content">
    <div class="container mt-1">
        <div class="row d-flex">
            <div class="col-12">
                <h2 class="text-white">Criação de categoria</h2>
                <h6>Criei uma nova categoria de produto interno</h6>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="box-filter box-shadow">
            @using (Html.BeginForm("Create", "Categoria", FormMethod.Post))
            {
                <form class="form">
                    <div class="form-group separador pb-4">
                        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <a asp-area="" asp-controller="Categoria" asp-action="Create" class="btn btn-primary button-header float-right">Adicionar</a>
                            <input type="submit" value="Salvar" class="btn btn-primary btn-form mr-2" />
                            <input type="submit" value="Cancelar" class="btn btn-secondary btn-form" asp-controller="Categoria" asp-action="Index"/>
                        </div>
                    </div>
                </form>
            }
    </div>
</div>


