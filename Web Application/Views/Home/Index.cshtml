@{
    ViewData["Title"] = "P&C WK";
}


<div class="header-content">
    <div class="container mt-1">
        <div class="row d-flex">
            <div class="col-12 col-md-6">
                <h2 class="text-white">Consulta de produtos</h2>
                <h6>Gerencie os seus produtos internos</h6>
            </div>

            <div class="col-12 col-md-6 align-self-center">
                <a asp-area="" asp-controller="Home" asp-action="Create" class="btn btn-primary button-header float-right">Adicionar</a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="box-filter box-shadow">

        <table class="table table-borderless table-hover table-striped">

        <thead>
            <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            <th scope="col">Categoria</th>
            <th scope="col">Preço</th>
            <th></th>
            <th></th>
            </tr>
        </thead>

        <tbody>

            @if (Model != null)
            {
                foreach (var produto in Model)
                {
                    <tr>
                        <th scope="row">@(produto.Id)</th>
                        <td>@(produto.Nome)</td>
                        <td>@(produto.Categoria?.Nome)</td>
                        <td>@(produto.Preco)</td>
                        <td>
                            <form>
                                <a asp-action="Edit" asp-controller="Home" method="get" asp-route-id="@produto.Id"><i class="material-icons">&#xE3C9;</i></a>
                            </form>
                        </td>
                        <td>
                            <form>
                                <a asp-action="Delete" asp-controller="Home" method="post" asp-route-id="@produto.Id"><i class="material-icons">&#xE872;</i></a>
                            </form>
                        </td>
                    </tr>
                }
            }

        </tbody>
        </table>
    </div>


    
</div>
